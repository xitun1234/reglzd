<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h3 class="h4">
                    Danh sách Kịch Bản</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm" id="tableListDevice">
                        <thead class="thead-light">
                            <tr>
                                <th>Tên Kịch Bản</th>
                                <th>Đường dẫn</th>
                                <th>Loại</th>
                                <th>Người Tạo</th>
                            </tr>
                        </thead>
                        <tbody style="color:black">
                            {{#each listScript}}
                                <tr>
                                    <td>{{this.scriptName}}</td>
                                    <td>{{this.duongDan}}</td>
                                    <td>{{this.scriptType}}</td>
                                    <td>
                                        <p class="text-warning text-bold">
                                            {{this.owner}}
                                        </p>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-outline-danger script" value={{this._id}}>Xóa </button>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
