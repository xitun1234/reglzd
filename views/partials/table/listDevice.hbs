<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h3 class="h4">
                    Danh sách thiết bị</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm" id="tableListDevice">
                        <thead class="thead-light">
                            <tr>
                                <th>Tên Thiết Bị</th>
                                <th>Địa chỉ mạng Lan</th>
                                <th>Người Tạo</th>
                                <th>Chọn</th>
                            </tr>
                        </thead>
                        <tbody style="color:black">
                            {{#each listDevice}}
                                <tr>
                                    <td>{{this.deviceName}}</td>
                                    <td>{{this.ipAddress}}</td>
                                    <td>
                                        <p class="text-warning text-bold">
                                            {{this.owner}}
                                        </p>
                                    </td>
                                    
                                    <td>
                                        {{#if this.isChoice}}   
                                        <button type="button" class="btn btn-outline-danger device" value={{this._id}}>Bỏ Chọn</button>
                                        {{else}}
                                        <button type="button" class="btn btn-outline-primary device" value={{this._id}}> Chọn</button>
                                        {{/if}}
                                    </td>
                                    

                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
